@model HomeViewModelDetails
@{
    ViewBag.Title = "ViewModelDetails Page";
    var photoPath = "~/Images/" + (Model.Employee.Photopath ?? "noImage.jpg");
}

<h3>@Model.PageTitle</h3>

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true"/>
                <h4> Id : @Model.Employee.Id</h4>
                <h4> Department : @Model.Employee.Department</h4>
                <h4> Email: @Model.Employee.Email</h4>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary m-1">Back</a>
                <a href="#" class="btn btn-primary m-1">Edit</a>
                <a href="#" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>